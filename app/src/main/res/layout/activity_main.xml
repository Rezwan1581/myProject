<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:orientation="vertical"  >

<TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="BOOK Tickets!"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/greenDark"
        android:textColorHighlight="@color/lightBlue"
        android:textIsSelectable="true"
        android:textSize="40sp"
        android:textStyle="italic"

        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dots"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where do you want to travel ?"
        android:textSize="35sp" />

    <CheckBox
        android:id="@+id/dhakaCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Dhaka"/>

    <CheckBox
        android:id="@+id/chittagongCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Chittagong"/>

    <CheckBox
        android:id="@+id/khulnaCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Khulna"/>
    <CheckBox
        android:id="@+id/rajshahiCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Rajshahi"/>

    <CheckBox
        android:id="@+id/barishalCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Barishal"/>

    <CheckBox
        android:id="@+id/sylhetCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Sylhet"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm your destination"
        android:textSize="30dp"
        />

    <Button
        android:layout_marginBottom="20dp"
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRM"/>

    <TextView
        android:id="@+id/confirmResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        />




<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:text="How do you like to Travel?"
    android:textSize="30dp"
    android:textStyle="italic"/>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

      <Button
          android:id="@+id/bus"
          android:layout_marginRight="5dp"
          android:background="@color/mediumorchid"
          android:textAllCaps="false"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="By Bus"
          android:textSize="20dp"
          android:drawableLeft="@drawable/bus"
          />Button

      <Button
          android:id="@+id/airplane"
          android:layout_marginRight="5dp"
          android:background="@color/mediumorchid"
          android:textAllCaps="false"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="By Air"
          android:textSize="20dp"
          android:drawableLeft="@drawable/airplane"
          />Button

      <Button
          android:id="@+id/train"
          android:background="@color/mediumorchid"
          android:textAllCaps="false"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="By Train"
          android:textSize="20dp"
          android:drawableLeft="@drawable/train"
          />Button



    </LinearLayout>


    <TextView
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/travelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="Enter Your Personal Info"
            />

     <EditText
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:hint="Name"
            android:inputType="textPersonName"
            />

        <EditText
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:hint="ROLL"
            android:inputType="numberDecimal"
            />
        <EditText
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:hint="AGE"
            android:inputType="numberDecimal"
            />
        <Button
            android:layout_marginLeft="310dp"
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"/>

        <TextView
        android:id="@+id/submitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        />

        <TextView
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Departure Date"
            />

        <DatePicker
            android:layout_marginLeft="30dp"
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </DatePicker>

        <Button
            android:layout_marginLeft="300dp"
            android:id="@+id/select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="29dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Selected Date "
            />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Select Time"
            />
        <TimePicker
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TimePicker>

        <Button
            android:layout_marginLeft="300dp"
            android:id="@+id/selectTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Time"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="29dp" />

        <TextView
            android:padding="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Rate this app"
            />

        <RatingBar
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginLeft="300dp"
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"/>


    </LinearLayout>

</ScrollView>
